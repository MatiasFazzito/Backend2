<div class='cart'>
    {{#if cart.products}}
    <h1>Bienvenido a tu carrito</h1>
    <ul class="productList">
        {{#each cart.products}}
        <li class="productDetail">
            <p>Producto: {{this.product.title}}</p>
            <p>Precio unitario: ${{this.product.price}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            <form action="/api/cart/{{../cart._id}}/product/{{this.product._id}}?_method=DELETE" method="post"
                enctype='application/x-www-form-urlencoded'>
                <input type='hidden' name='_method' value='DELETE'>
                <button type='submit'>Eliminar producto de carrito</button>
            </form>
        </li>
        {{/each}}
    </ul>
    <form class="cleanCart" action='/api/cart/{{cart._id}}?_method=DELETE' method='POST'
        enctype='application/x-www-form-urlencoded'>
        <input type='hidden' name='_method' value='DELETE'>
        <button type='submit'>Vaciar carrito</button>
    </form>
    {{else}}
    <h1>Tu carrito esta vacio!</h1>
    <button class="emptyCart"><a href="/api/products">Vamos a llenarlo!</a></button>
    {{/if}}
</div>