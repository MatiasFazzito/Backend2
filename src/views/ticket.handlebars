<div class="listContainer">
    <div class='ticket'>
        <h2>NÂ° de Ticket: {{ticket.code}}</h2>
        <p>Fecha: {{ticket.purchaseDatetime}}</p>
        {{#each ticket.products}}
        <p>producto: {{product.title}}</p>
        <p>cantidad: {{quantity}}</p>
        {{/each}}
        <p>Total: {{ticket.amount}}</p>
        <p>Comprador: {{ticket.purchaser.email}}</p>
        {{#if currentUser.isValid}}
        <form action="/api/tickets/{{ticket._id}}/resolve?_method=PUT" method="POST" enctype='application/x-www-form-urlencoded'>
            <input type='hidden' name='_method' value='PUT'>
            <button type='submit'>Resolve ticket</button>
        </form>
        {{/if}}
    </div>
</div>